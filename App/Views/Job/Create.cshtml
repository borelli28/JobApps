@model App.Models.Job

@{
    ViewData["Title"] = "Add Job";
}

<div class="max-w-lg mx-auto">
    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        
        <div>
            <label asp-for="Status" class="block text-gray-700 font-medium"></label>
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<App.Models.JobStatus>()" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option selected="selected" value="">Select</option>
            </select>
            <span asp-validation-for="Status" class="text-red-500"></span>
        </div>

        <div>
            <label asp-for="Title" class="block text-gray-700 font-medium"></label>
            <input asp-for="Title" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Title" class="text-red-500"></span>
        </div>

        <div>
            <label asp-for="Company" class="block text-gray-700 font-medium"></label>
            <input asp-for="Company" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Company" class="text-red-500"></span>
        </div>

        <div>
            <label asp-for="Url" class="block text-gray-700 font-medium"></label>
            <input asp-for="Url" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Url" class="text-red-500"></span>
        </div>

        <div>
            <label asp-for="Location" class="block text-gray-700 font-medium"></label>
            <input asp-for="Location" class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
            <span asp-validation-for="Location" class="text-red-500"></span>
        </div>

        <div>
            <input type="submit" value="Submit" class="w-full bg-indigo-600 text-white font-bold py-2 px-4 rounded-md hover:bg-indigo-700" />
        </div>
    </form>
</div>

<div class="mt-4 text-center">
    <a asp-controller="Home" asp-action="Index" class="text-indigo-600 hover:underline">Go Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
