@model App.Models.Job

@{
    ViewData["Title"] = "Delete";
}

<h3 class="text-2xl font-semibold mb-6 text-center">Are you sure you want to delete?</h3>
<div class="max-w-lg mx-auto">
    <h4 class="text-lg font-medium mb-2 text-center">@Html.DisplayFor(model => model.Title) at @Html.DisplayFor(model => model.Company)</h4>
    <hr class="my-4" />

    <form asp-action="Delete" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="w-full bg-red-600 text-white font-bold py-2 px-4 rounded-md hover:bg-red-700" />
    </form>

    <div class="mt-4 text-center">
        <a asp-action="Index" asp-controller="Home" class="text-indigo-600 hover:underline">Go Home</a>
    </div>
</div>
